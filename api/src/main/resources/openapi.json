            "maximum": 9223372036854775807,
            "readOnly": true
          },
          "name": {
            "type": "string",
            "title": "Имя существа"
          },
          "birthday": {
            "type": "string",
            "format": "date",
            "title": "Дата рождения существа"
          },
          "race": {
            "type": "string",
            "title": "Раса существа"
          },
          "death_date": {
            "type": "string",
            "format": "date",
            "title": "Дата смерти существа"
          },
          "sex": {
            "type": "string",
            "title": "Пол существа"
          }
        },
        "required": [
          "id",
          "name",
          "birthday",
          "race",
          "sex"
        ]
      },
