{
  "openapi": "3.0.3",
  "info": {
    "title": "Archive of secret investigation",
    "description": "Archive of secret investigation. Course work",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:8080/",
      "description": "default server"
    }
  ],
  "tags": [
    {
      "name": "Ordens",
      "description": "Ордена"
    }
  ],
  "paths": {
    "/api/v1/ordens": {
      "get": {
        "tags": [
          "Ordens"
        ],
        "summary": "Просмотр всех орденов",
        "operationId": "getOrdens",
        "responses": {
          "200": {
            "description": "Просмотр данных всех орденов",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "title": "Список всех орденов",
                  "items": {
                    "$ref": "#/components/schemas/Orden"
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/ResponseUnauthorized"
          },
          "403": {
            "$ref": "#/components/responses/ResponsePermissionDenied"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      },
      "post": {
        "tags": [
          "Ordens"
        ],
        "summary": "Создание ордена",
        "operationId": "createOrden",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Orden"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Запись об ордене успешно создана",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Orden"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/ResponseUnauthorized"
          },
          "403": {
            "$ref": "#/components/responses/ResponsePermissionDenied"
          },
          "409": {
            "$ref": "#/components/responses/ResponseConflict"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    },
    "/api/v1/ordens/{ordenId}": {
      "get": {
        "tags": [
          "Ordens"
        ],
        "summary": "Получение ордена",
        "operationId": "getOrden",
        "parameters": [
          {
            "$ref": "#/components/parameters/ordenId"
          }
        ],
        "responses": {
          "200": {
            "description": "Просмотр данных об ордене",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Orden"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/ResponseUnauthorized"
          },
          "403": {
            "$ref": "#/components/responses/ResponsePermissionDenied"
          },
          "404": {
            "$ref": "#/components/responses/ResponseNotFound"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      },
      "put": {
        "tags": [
          "Ordens"
        ],
        "summary": "Изменение ордена",
        "operationId": "updateOrden",
        "parameters": [
          {
            "$ref": "#/components/parameters/ordenId"
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Orden"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Запись об ордене успешно изменена",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Orden"
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/ResponseUnauthorized"
          },
          "403": {
            "$ref": "#/components/responses/ResponsePermissionDenied"
          },
          "404": {
            "$ref": "#/components/responses/ResponseNotFound"
          },
          "409": {
            "$ref": "#/components/responses/ResponseConflict"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      },
      "delete": {
        "tags": [
          "Ordens"
        ],
        "summary": "Удаление ордена",
        "operationId": "deleteOrden",
        "parameters": [
          {
            "$ref": "#/components/parameters/ordenId"
          }
        ],
        "responses": {
          "200": {
            "$ref": "#/components/responses/ResponseDeleted"
          },
          "401": {
            "$ref": "#/components/responses/ResponseUnauthorized"
          },
          "403": {
            "$ref": "#/components/responses/ResponsePermissionDenied"
          },
          "404": {
            "$ref": "#/components/responses/ResponseNotFound"
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ]
      }
    }
  },
  "components": {
    "schemas": {
      "Error": {
        "type": "object",
        "title": "Ошибка",
        "properties": {
          "code": {
            "type": "string",
            "title": "Краткое общепринятое обозначение ошибки"
          },
          "message": {
            "type": "string",
            "title": "Сообщение с описанием ошибки"
          }
        },
        "required": [
          "code",
          "message"
        ]
      },
      "Orden": {
        "type": "object",
        "title": "Орден",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32",
            "title": "Идентефикатор ордена",
            "minimum": 1,
            "maximum": 32767,
            "readOnly": true
          },
          "name": {
            "type": "string",
            "title": "Название ордена"
          },
          "description": {
            "type": "string",
            "title": "Описание ордена",
            "nullable": true
          }
        },
        "required": [
          "id",
          "name"
        ]
      }
    },
    "parameters": {
      "ordenId": {
        "name": "ordenId",
        "in": "path",
        "description": "Идентефикатор ордена",
        "required": true,
        "schema": {
          "type": "integer",
          "format": "int32",
          "minimum": 1,
          "maximum": 32767
        }
      }
    },
    "responses": {
      "ResponseDeleted": {
        "description": "Сущность удалена",
        "content": {
          "application/json": {
            "schema": {
              "type": "boolean",
              "title": "Признак успешности операции (всегда true)"
            }
          }
        }
      },
      "ResponseConflict": {
        "description": "Уже существует объект с таким же набором уникальных полей",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      },
      "ResponseUnauthorized": {
        "description": "JWT-токен не найден или невалиден",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      },
      "ResponsePermissionDenied": {
        "description": "Нет доступа к ресурсу или операции",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      },
      "ResponseNotFound": {
        "description": "Ресурс не найден",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
